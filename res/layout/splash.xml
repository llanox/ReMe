<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#ffffff" android:gravity="center_vertical|center_horizontal">
    
    <TextView android:id="@+id/tvWelcome" 
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:textColor="@color/textcolor" android:text="@string/welcome_msg" android:textSize="20px">
    </TextView>
    
    <ImageView 
    android:src="@drawable/biglogo" 
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" android:id="@+id/reme_image">
    </ImageView>
    <TextView android:id="@+id/textView1" android:layout_height="wrap_content" android:text="@string/loading_splash" android:layout_width="wrap_content" android:textColor="@color/textcolor"></TextView>
      

  



</LinearLayout>